<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/cardview_dark_background"
    android:layout_width="match_parent"
    android:minHeight="60dp"
    android:layout_marginBottom="@dimen/padding_16"
    android:layout_marginLeft="@dimen/padding_16"
    android:layout_marginRight="@dimen/padding_16"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/eventTypeLayoutId"
            android:layout_width="6dp"
            android:layout_height="@dimen/minCardHeight"
            android:background="@color/indigo_400"/>
        <ImageView
            android:id="@+id/eventImageId"
            android:layout_width="120dp"
            android:layout_height="@dimen/minCardHeight"
            android:scaleType="centerCrop"
            android:src="@drawable/castle"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <RelativeLayout
            android:layout_toLeftOf="@id/eventTypeLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/eventImageId"
            android:layout_margin="@dimen/padding_16">

            <TextView
                android:id="@+id/eventTypeId"
                android:textColor="@color/indigo_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxWidth="70dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="type"/>
            <TextView
                android:id="@+id/eventTimestampId"
                android:textColor="@color/grey_900"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="timestamp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/eventTitleId"
                android:textColor="@color/grey_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="title event"
                android:textSize="20sp"
                android:layout_below="@id/eventTimestampId"
                android:layout_marginTop="@dimen/padding_8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/eventContentId"
                android:layout_below="@id/eventTitleId"
                android:text="conent event"
                android:textColor="@color/grey_900"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/eventUrlId"
                android:layout_marginTop="8dp"
                android:textColor="@color/grey_600"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventContentId"
                android:textSize="12sp"
                android:text="url --------"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
