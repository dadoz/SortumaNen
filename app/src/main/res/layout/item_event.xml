<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/cardview_dark_background"
    android:layout_width="match_parent"
    android:minHeight="60dp"
    android:layout_marginBottom="@dimen/padding_16"
    android:layout_marginLeft="@dimen/padding_16"
    android:layout_marginRight="@dimen/padding_16"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <TextView
            android:id="@+id/eventTypeId"
            android:textColor="@color/indigo_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"
            android:text="type"/>
        <TextView
            android:id="@+id/eventTimestampId"
            android:layout_alignParentRight="true"
            android:textColor="@color/grey_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timestamp"/>

        <TextView
            android:id="@+id/eventTitleId"
            android:layout_below="@id/eventTypeId"
            android:textColor="@color/amber_600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title event"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/eventContentId"
            android:layout_below="@id/eventTitleId"
            android:text="conent event"
            android:textColor="@color/grey_200"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/eventUrlId"
            android:layout_marginTop="8dp"
            android:textColor="@color/grey_600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventContentId"
            android:textSize="12sp"
            android:text="url --------"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
